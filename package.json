{
  "name": "support-clore-migration",
  "version": "1.0.0",
  "description": "CLORE Migration Message Signer â€“ https://docs.clore.ai/main/clore-migration",
  "main": "electron/main.js",
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Corey-Code/support-clore-migration.git"
  },
  "bugs": {
    "url": "https://github.com/Corey-Code/support-clore-migration/issues"
  },
  "homepage": "https://github.com/Corey-Code/support-clore-migration#readme",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "ai.clore.migration",
    "productName": "CLORE Migration Signer",
    "asar": true,
    "files": [
      "electron/**/*",
      "signer.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null
    },
    "win": {
      "target": [
        "nsis"
      ],
      "forceCodeSigning": false
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "bitcoinjs-message": "^2.2.0",
    "coinkey": "^3.0.0"
  }
}
